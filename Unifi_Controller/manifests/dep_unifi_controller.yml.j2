apiVersion: apps/v1
kind: Deployment
metadata:
    name: unifi-controller
    namespace: {{ unifi_controller_namespace }}
    labels:
        app: unifi-controller
        type: third-party
        facing: internal
spec:
    replicas: 1
    strategy:
        type: Recreate
    selector:
        matchLabels:
            app: unifi-controller
    template:
        metadata:
            labels:
                app: unifi-controller
        spec:    
            initContainers:
                - name: unifi-controller-system-properties-injector
                  image: busybox
                  command: ['sh', '-c', 'mkdir -p /unifi_controller_data/data && cp /system.properties /unifi_controller_data/data/system.properties']
                  volumeMounts:
                      - name: unifi-controller-system-properties
                        mountPath: /system.properties
                        subPath: system.properties    
                      - name: unifi-controller-data
                        mountPath: /unifi_controller_data/
            containers:
                - name: unifi-controller
                  image: linuxserver/unifi:latest
                  env:
                      - name: TZ
                        value: "Pacific"
                      - name: PUID
                        value: "1002"
                      - name: PGID
                        value: "1007"
                  ports:
                      - name: "l2-discoverable"
                        containerPort: 1900
                        protocol: UDP
                      - name: "stun"
                        containerPort: 3478
                        protocol: UDP
                      - name: "ap-discovery"
                        containerPort: 10001
                        protocol: UDP
                      - name: "speed-test"
                        containerPort: 6789
                      - name: "internal-comms"
                        containerPort: 8080
                      - name: "unknown-port"
                        containerPort: 8081
                      - name: "web-interface"
                        containerPort: 8443
                      - name: "https-redirect"
                        containerPort: 8843
                      - name: "http-redirect"
                        containerPort: 8880
                      - name: "local-comms"
                        containerPort: 27117
                  volumeMounts:
                      - name: unifi-controller-data
                        mountPath: /config
                      - name: unifi-controller-backups
                        mountPath: /backups
#                  readinessProbe:
#                      httpGet:
#                          path: /
#                          port: 8080
#                      initialDelaySeconds: 500
#                      periodSeconds: 10
#                      failureThreshold: 1                   
#                  livenessProbe:
#                      httpGet:
#                          path: /
#                          port: 8080
#                      initialDelaySeconds: 500
#                      periodSeconds: 10
#                      failureThreshold: 5
#                  resources:
#                      requests:
#                          memory: {{ mem_request_unifi }}
#                          cpu: {{ cpu_request_unifi }}
#                      limits:
#                          memory: {{ mem_limit_unifi }}
#                          cpu: {{ cpu_limit_unifi }}
            volumes:
                - name: unifi-controller-data
                  persistentVolumeClaim:
                    claimName: unifi-controller-data
                - name: unifi-controller-backups
                  persistentVolumeClaim:
                    claimName: unifi-controller-backups                    
                - name: unifi-controller-system-properties
                  configMap:
                    name: unifi-controller-system-properties                    
